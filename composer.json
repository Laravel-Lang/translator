{
    "name": "laravel-lang/translator",
    "description": "Text translation using multiple API translators",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@dragon-code.pro"
        }
    ],
    "require": {
        "deeplcom/deepl-php": "^1.7",
        "stichoza/google-translate-php": "^5.1",
        "laravel-lang/locale-list": "^1.4",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.1",
        "pestphp/pest": "^2.34",
        "symfony/var-dumper": "^7.1"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "LaravelLang\\Translator\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
}
